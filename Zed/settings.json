// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "disable_ai": false,
  "buffer_font_size": 16,
  "ui_font_size": 16,
  "icon_theme": "Zed (Default)",
  "format_on_save": "on",
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "search": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": true
  },
  "debugger": {
    "button": false
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "context_servers": {
    "mcp-server-github": {
      "settings": {
        "github_personal_access_token": "<GH_TOKEN>"
      }
    },
    "mcp-server-context7": {
      "settings": {
        "default_minimum_tokens": "10000"
      }
    },
    "browser-tools-context-server": {
      "settings": {
        "port": 4827,
        "host": "127.0.0.1",
        "server_command": "bunx",
        "server_args": ["@agentdeskai/browser-tools-server@1.2.0"]
      }
    },
    "mcp-server-brave-search": {
      "settings": {
        "brave_api_key": "<BRAVE_API_KEY>"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": [".env", "leetcode.py"]
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "play_sound_when_agent_done": false,
    "always_allow_tool_actions": true,
    "default_profile": "god",
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "mcp-server-sequential-thinking": {
            "tools": {
              "sequentialthinking": false
            }
          },
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": false,
              "get-library-docs": false
            }
          },
          "mcp-server-brave-search": {
            "tools": {
              "brave_web_search": false,
              "brave_local_search": false
            }
          }
        }
      },
      "god": {
        "name": "God",
        "tools": {
          "project_notifications": true,
          "web_search": true,
          "thinking": true,
          "terminal": true,
          "read_file": true,
          "open": true,
          "now": true,
          "move_path": true,
          "list_directory": true,
          "grep": true,
          "find_path": true,
          "fetch": true,
          "edit_file": true,
          "diagnostics": true,
          "delete_path": true,
          "create_directory": true,
          "copy_path": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "mcp-server-brave-search": {
            "tools": {
              "brave_summarizer": true,
              "brave_video_search": true,
              "brave_news_search": true,
              "brave_image_search": true,
              "brave_web_search": true,
              "brave_local_search": true
            }
          },
          "mcp-server-sequential-thinking": {
            "tools": {
              "sequentialthinking": true
            }
          },
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true
            }
          },
          "mcp-server-github": {
            "tools": {
              "sub_issue_write": true,
              "search_pull_requests": true,
              "pull_request_review_write": true,
              "pull_request_read": true,
              "list_releases": true,
              "list_issue_types": true,
              "issue_write": true,
              "issue_read": true,
              "get_teams": true,
              "get_team_members": true,
              "get_release_by_tag": true,
              "get_latest_release": true,
              "get_label": true,
              "add_comment_to_pending_review": true,
              "submit_pending_pull_request_review": true,
              "mark_all_notifications_read": true,
              "manage_repository_notification_subscription": true,
              "manage_notification_subscription": true,
              "list_notifications": true,
              "get_pull_request_diff": true,
              "get_notification_details": true,
              "dismiss_notification": true,
              "delete_pending_pull_request_review": true,
              "create_pending_pull_request_review": true,
              "create_and_submit_pull_request_review": true,
              "assign_copilot_to_issue": true,
              "add_pull_request_review_comment_to_pending_review": true,
              "update_pull_request_branch": true,
              "update_pull_request": true,
              "update_issue": true,
              "search_users": true,
              "search_issues": true,
              "search_repositories": true,
              "search_code": true,
              "request_copilot_review": true,
              "push_files": true,
              "merge_pull_request": true,
              "list_secret_scanning_alerts": true,
              "list_tags": true,
              "list_pull_requests": true,
              "list_issues": true,
              "list_commits": true,
              "list_branches": true,
              "list_code_scanning_alerts": true,
              "get_tag": true,
              "get_secret_scanning_alert": true,
              "get_pull_request_status": true,
              "get_pull_request_reviews": true,
              "get_pull_request_comments": true,
              "get_pull_request_files": true,
              "get_pull_request": true,
              "get_me": true,
              "get_issue_comments": true,
              "get_issue": true,
              "get_file_contents": true,
              "get_commit": true,
              "get_code_scanning_alert": true,
              "fork_repository": true,
              "delete_file": true,
              "create_repository": true,
              "create_pull_request_review": true,
              "create_pull_request": true,
              "create_or_update_file": true,
              "create_issue": true,
              "create_branch": true,
              "add_pull_request_review_comment": true,
              "add_issue_comment": true
            }
          }
        }
      }
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "theme": "Dogi Dark",
  "autosave": "on_focus_change",
  "languages": {
    "Python": {
      "show_edit_predictions": true,
      "format_on_save": "on",
      "language_servers": ["ty", "ruff"],
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff"
        },
        {
          "code_action": "source.fixAll.ruff"
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Vue.js": { "show_edit_predictions": true, "format_on_save": "off" },
    "JavaScript": { "show_edit_predictions": true, "format_on_save": "off" },
    "HTML": { "show_edit_predictions": true, "format_on_save": "off" }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "ty": {
      "settings": {
        "diagnosticMode": "workspace", // openFilesOnly
        "experimental": {
          "rename": true
        }
      }
    }
  }
}
